{
  "name": "dzap-core",
  "version": "1.0.0",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:js:fix": "eslint --ignore-path .gitignore . --fix",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier -c 'contracts/**/*.sol'",
    "lint:sol:fix": "prettier --write \"contracts/**/*.sol\"",
    "build": "yarn clean && yarn compile",
    "clean": "hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "addBridges": "ts-node scripts/addMultipleBridges.ts",
    "addDexes": "ts-node scripts/addMultipleDexes.ts",
    "removeDexes": "ts-node scripts/removeMultipleDexes.ts",
    "removeBridges": "ts-node scripts/removeMultipleBridges.ts",
    "syncHistory": "ts-node scripts/syncHistory.ts",
    "checkDeployedFacets": "ts-node scripts/facet/multiCheckFacetsDeployed.ts"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "0.11.0",
    "@matterlabs/hardhat-zksync-solc": "^1.2.1",
    "@matterlabs/hardhat-zksync-verify": "1.5.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.22.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@uniswap/permit2-sdk": "^1.2.0",
    "@uniswap/v2-core": "^1.0.1",
    "axios": "^1.3.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.7.2",
    "fs-extra": "^11.1.0",
    "hardhat": "^2.12.5",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.22",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "1.1.1",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "viem": "^2.16.3",
    "xdeployer": "^1.2.7",
    "zksync-ethers": "5"
  }
}
