{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": [
    "test/**/*",
    "constants/**/*",
    "config/**/*",
    "scripts/**/*",
    "tasks/**/*",
    "types/**/*",
    "typechain/**/*",
    "utils/**/*",
    "deploy/**/*",
    "deploy-args.ts"
  ],
  "files": ["./hardhat.config.ts", "./deploy/deployFacets.ts"]
}
