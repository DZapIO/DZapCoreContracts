{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": [
    "test/**/*",
    "constants/**/*",
    "config/**/*",
    "scripts/**/*",
    "tasks/**/*",
    "types/**/*",
    "typechain/**/*",
    "utils/**/*",
    "deploy-args.ts",
    "./scripts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
